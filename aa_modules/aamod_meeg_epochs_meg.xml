<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='meeg_session' desc='Epoching continuous MEG data' modality='MEEG'>
            
            <qsub>
                <timeBase>0.15</timeBase>
                <memoryBase>0.5</memoryBase>
            </qsub>
            
            <baselinecorrection>1</baselinecorrection>
            
            <timewindow desc='Time window in PST ms (1x2 numeric array)'></timewindow>

            <eventtype>STI101_up</eventtype>
            
            <condition>
                <subject></subject>
                <session></session>
                <event>
                    <conditionlabel></conditionlabel>
                    <eventvalue></eventvalue>
                    <eventtype></eventtype>                    
                    <trlshift></trlshift> <!--- usually 34ms for visual, 9ms for auditory -->
                </event>
            </condition>

            <inputstreams>
                <stream>meeg</stream>
            </inputstreams>
            
            <outputstreams>
                <stream>meeg</stream>                
            </outputstreams>
            
        </currenttask>
    </tasklist>
</aap>