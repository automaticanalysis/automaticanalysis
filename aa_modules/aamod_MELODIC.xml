<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='subject' desc='FSL MELODIC' modality='MRI'>
            
            <qsub>
                <timeBase>1</timeBase>
                <memoryBase>1</memoryBase>
            </qsub>
            
            <permanenceofoutput>2</permanenceofoutput>
            
            <inputstreams>
                <stream isessential='0'>firstlevel_brainmask</stream>
                <stream>epi</stream>  
            </inputstreams>
            
            <mmthresh desc='threshold for Mixture Model based inference; 0 - switch off mixture modelling on IC maps'>0.5</mmthresh>
            
            <outputstreams>
                <stream>melodic</stream>
            </outputstreams>
            
            <!-- MELODIC OPTIONS (default - make it verbose) -->
            <MELODICoptions>-v</MELODICoptions>
            
        </currenttask>
    </tasklist>
</aap>
