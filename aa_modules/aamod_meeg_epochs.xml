<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='meeg_session' desc='Epoching continuous EEGLAB MEEG file' modality='MEEG'>
            
            <qsub>
                <timeBase>0.15</timeBase>
                <memoryBase>0.5</memoryBase>
            </qsub>
            
            <timewindow desc='Time window in PST ms (1x2 numeric array)'></timewindow>

            <baselinewindow desc='specify baseline as [begin end] in milliseconds for baseline correction'></baselinewindow>
            
            <rejectionevent desc='eventvalue used to indicate rejection of data'></rejectionevent>
            
            <eventtype></eventtype>
            <condition>
                <subject></subject>
                <session></session>
                <event>
                    <conditionlabel></conditionlabel>
                    <eventvalue></eventvalue>
                    <eventtype></eventtype>                    
                    <trlshift desc='stimulus presentation delay in millisecond'></trlshift> <!--- usually 34ms for visual, 9ms for auditory -->
                </event>
            </condition>
            
            <inputstreams>
                <stream>meeg</stream>
            </inputstreams>
            
            <outputstreams>
                <stream>meeg</stream>
            </outputstreams>
            
        </currenttask>
    </tasklist>
</aap>